VPATH := $(VPATH) $(CSMINWEL_DIR) $(MATRIX_DIR) $(GENERIC_SRC_DIR) $(SMALL_MODEL_DIR) $(EQUI_ENERGY_DIR) $(SMALL_MODEL_SIMULATION_DIR) $(BUILD_DIR) $(EXE_DIR)

# ERROR FILES ######################################################################
ERROR_OBJS = dw_error.o

# CSMINWEL FILES ###################################################################
CSMINWEL_OBJS = dw_csminwel.o

# MATRIX FILES #####################################################################
